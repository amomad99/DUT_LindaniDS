        {
            var base64 = Convert.ToBase64String(item.Picture);
            var imgScr = string.Format("data:image/gif;base64,{0}", base64);

            <img src="@imgScr" width="200" height="200" />
            @*<img src="@Url.Content(item.Picture)" alt="@Model.AlternateText" />*@
